{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vscode"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "test",
    "**/*.test.ts",
    "jest.config.js"
  ]
}